pipeline {
    agent any
stages{
        stage('Build da imagem Docker Backend') {
            steps {
                script {
                    sh 'docker buildx build -t backend -f Dockerfile.backend .'
                }
            }
        }

   stage('Combine imagens em um contêiner') {
    steps {
        script {
            sh 'docker create --name backend-container backend'
                    sh 'docker cp backend-container:/app/backend/ combined'

            // Se precisar manter o contêiner em execução, adicione um comando que o mantenha suspenso.
            sh 'docker run -d --name backend-container-suspended backend tail -f /dev/null'
        }
    }
}
              
     

        stage('Aguardar subida dos containers') {
            steps {
                script {
                    sh 'sleep 10'
                }
            }
        }
    }
}
