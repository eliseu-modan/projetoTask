pipeline {
    agent any
    stages {
        stage('Build da imagem Docker Frontend') {
            steps {
                script {
                    sh 'docker buildx build -t frontend -f Dockerfile.frontend .'
                }
            }
        }

        stage('Build da imagem Docker backend') {
            steps {
                script {
                    sh 'docker buildx build -t backend -f Dockerfile.backend .'
                }
            }
        }

        stage('Combine imagens') {
            steps {
                script {
                    sh 'docker create --name frontend-container frontend'
                    sh 'docker create --name backend-container backend'
                    sh 'docker cp frontend-container:/path/to/frontend/dist combined'
                    sh 'docker cp backend-container:/path/to/backend/dist combined'
                    sh 'docker build -t combined -f Dockerfile.combined .'
                    sh 'docker rm frontend-container backend-container'
                }
            }
        }

        stage('Subir docker compose - tasks') {
            steps {
                script {
                    sh 'docker-compose up --build -d'
                }
            }
        }

        stage('Aguardar subida dos containers') {
            steps {
                script {
                    sh 'sleep 10'
                }
            }
        }
    }
}

